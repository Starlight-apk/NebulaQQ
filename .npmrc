# 使用腾讯云 npm 镜像源
registry=https://registry.npmmirror.com/

# 禁用进度条和日志输出，减少 IO
loglevel=error
progress=false
disable-progress-bar=true

# 增加超时时间
fetch-timeout=60000
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# 使用 node-modules linker 以支持 workspace 依赖链接
node-linker=node-modules

# 启用 workspace 协议
shamefully-hoist=false

# 禁用可选依赖（可选）
optional=false
