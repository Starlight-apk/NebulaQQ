{
  "name": "nebulaqq",
  "version": "1.0.0",
  "description": "NebulaQQ - 新一代现代化 QQ 机器人框架，支持插件、模块和主题系统",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:protocol && pnpm run build:core && pnpm run build:utils && pnpm run build:network && pnpm run build:module && pnpm run build:theme && pnpm run build:adapter && pnpm run build:webui",
    "build:core": "cd packages/core && pnpm run build",
    "build:utils": "cd packages/utils && pnpm run build",
    "build:network": "cd packages/network && pnpm run build",
    "build:module": "cd packages/module-sdk && pnpm run build",
    "build:theme": "cd packages/theme-sdk && pnpm run build",
    "build:adapter": "cd packages/adapter-onebot && pnpm run build",
    "build:webui": "cd packages/webui && pnpm run build",
    "build:protocol": "cd packages/qq-protocol && pnpm run build",
    "dev:webui": "cd packages/webui && pnpm run dev",
    "dev:theme-glass": "cd packages/webui-theme-glass && pnpm run dev",
    "start:webui": "cd packages/webui-server && pnpm run start",
    "test": "node --test",
    "lint": "eslint packages/**/src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm run build",
    "clean": "rm -rf packages/*/dist packages/*/node_modules"
  },
  "keywords": [
    "qq",
    "bot",
    "robot",
    "onebot",
    "nebulaqq",
    "framework",
    "termux",
    "arm64",
    "webui",
    "material-design"
  ],
  "author": "Starlight-apk Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Starlight-apk/NebulaQQ"
  },
  "homepage": "https://github.com/Starlight-apk/NebulaQQ",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "packageManager": "pnpm@8.0.0"
}
